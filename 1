int main()
{
	float d1, d2, d3, d4, d5, sum, average;
	cout << "1st Number" << endl;
	cin >> d1;
	cout << "2nd Number" << endl;
	cin >> d2;
	cout << "3rd Number" << endl;
	cin >> d3;
	cout << "4th Number" << endl;
	cin >> d4;
	cout >> "5th Number" << endl;
	cin >> d5
		sum = d1 + d2 + d3 + d4 + d5
		average = sum / 5
	cout << "Sum" << sum << endl;
	cout << "Average" << average << endl;
	cout << static_cast<int> (d1) << endl;
	cout << static_cast<int> (d2) << endl;
	cout << static_cast<int> (d3) << endl;
	cout << static_cast<int> (d4) << endl;
	cout << static_cast<int> (d5) << endl;
